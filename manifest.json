{
    "name": "Test Ext",
    "description": "my first test extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Chrome Ext",
        "default_popup": "popup.html"
    },
    "icons": {},
    "background": {
        "service_worker": "./background.js"
    },
    "options_page": "./options.html",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}